
<div class="contact-inf" ng-controller="PostContactUs" id="contactus">
    <h5 class="subtitle">Contact us</h5>
    <form class="frmContact">
        <h4 class="bg-success">{{message}}</h4>
        <input type="text" placeholder="Your Name..." value="" id="txtName" name="txtName" ng-model="Name" required />
        <input type="email" placeholder="Your Email Address..." value="" id="txtEmail" name="EmailID" required ng-model="EmailID" />
        <input type="text" placeholder="Your Phono..." value="" id="txtPhoneNo" name="txtPhoneNo" ng-model="PhoneNo" required />
        
        <textarea placeholder="Your Message..." id="txtMsg" name="txtMsg" ng-model="Msg" required></textarea>
        <button class="btnSend" type="submit" ng-click="submit()">Send Message</button>
    </form>
</div>